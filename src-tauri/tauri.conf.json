{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Planar Nexus",
  "version": "0.1.0",
  "identifier": "com.planarnexus.app",
  "build": {
    "devtools": true,
    "frontendDist": "../.next",
    "devUrl": "http://localhost:9002",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Planar Nexus",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Game",
    "shortDescription": "A digital Magic: The Gathering tabletop experience",
    "longDescription": "Planar Nexus is a digital Magic: The Gathering tabletop experience built with Next.js, featuring deck building, AI coaching, and multiplayer functionality.",
    "copyright": "Copyright 2024 Planar Nexus",
    "publisher": "Planar Nexus",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null,
      "nsis": {
        "installMode": "currentUser",
        "license": null,
        "installerIcon": null,
        "headerImage": null,
        "sidebarImage": null,
        "languages": ["English"],
        "displayLanguageSelector": false
      },
      "wix": null
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": [],
        "files": {}
      },
      "rpm": {
        "depends": []
      }
    },
    "ios": {
      "minimumOSVersion": "14.0",
      "devices": ["iphone", "ipad"],
      "signingIdentity": null,
      "provisioningProfiles": null,
      "entitlements": null
    },
    "android": {
      "minSdkVersion": 24,
      "targetSdkVersion": 34,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "manifest": null,
      "keyAlias": null,
      "keyStore": null,
      "signingKeystore": null
    }
  },
  "plugins": {
    "updater": {
      "pubkey": null,
      "endpoints": []
    }
  }
}
